<p><%= notice %></p>
<h1>Forgot your password?</h1>

    <%= form_for :user, url: forgot_password_path, html: {class: "form"} do |f| %>
      <div class="form-group">
        <%= f.label "Email" %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>
      <%= f.submit "Email new password", :class => "btn btn-success"%>
    <% end %>
