<%= link_to "New Product", new_product_path, class: 'btn btn-success pull-right' %>
<h1 class="page-header">Products List</h1>
<table class="table">
	<tbody>
		<tr>
			<th> Name</th>
			<th> Price</th>
			<th> Code</th>
		</tr>
		<% @products.each do |product| %>
		<tr>
			<td><%= link_to product.name, edit_product_path(product) %></td>
			<td><%= product.price %></td>
			<td><%= product.code %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="col-md-2 col-md-offset-4">
<%= paginate @products %>
</div>