<div class='row'>
  <div class="col-md-5">
    <% if @product.errors.any? %>
      <div id="errors" class="alert alert-danger">
	<p><strong>Please correct the following <%= pluralize(@product.errors.count, "error") %>:</strong></p>
	<ul>
	  <% @product.errors.full_messages.each do |msg| %>
	    <li><%= msg  %></li>
	  <% end %>
	</ul>
      </div>
    <% end %>
    <%= form_for @product do |f| %>
      <div class="form-group">
	<%= f.label :name %>
        <%= f.text_field :name, :placeholder=>"Enter the name",:class=>"form-control" %>
      </div>
      <div class="form-group">
	<%= f.label :price %>
        <%= f.text_field :price, :placeholder=>"Enter the price", :class=>"form-control" %>
      </div>
      <div class="form-group">
	<%= f.label :code %>
        <%= f.text_field :code, :placeholder=>"Enter the code",  :class=>"form-control" %>
      </div>
      <%= f.submit  :class=>"btn btn-success" %>
    <% end %>
  </div>
</div>
